---
const { href } = Astro.props;

export interface Props {
  href: string;
}
---

<a
  href={href}
  target="_blank"
  rel="noopener noreferrer"
  class="flex gap-4 text-neutral-700 hover:text-neutral-900 fill-neutral-700 hover:fill-neutral-900 dark:text-neutral-400 dark:hover:text-neutral-200 dark:fill-neutral-400 dark:hover:fill-neutral-200"
>
  <slot />
</a>
